.menu-side-left
  md-sidenav
    width: 200px
    min-width: 200px
    max-width: 200px

  ul
    padding 0

.htl-header .htl-toolbar
  background-color #106CC8
  .htl-name-app
    text-align left
  .htl-menu-right-on-toolbar
    text-align right
    .htl-button-option
      color white
    .htl-button-account
      color white
    .btn-group .dropdown-menu
      left auto
      right 0

.htl-menu-toolbar
  .htl-wrapper-menu-toolbar
    color white
    background-color #296293
    .htl-list-menu
      ul
        margin 0 auto
        li
          display inline-block
          margin 0
          a
            display block
            padding 1.8rem 1rem 1.2rem 1rem
            height 5rem
            text-decoration none
            color white
          a:hover
            background-color #3498db
            outline none
        .tab-current
          a
            background #ecf3fa
            color #296293
          a:hover
            background #ecf3fa
            color #74777b




.accordion-menu .accordion-children .menuToggle-child-button
  display block
  text-align left
  padding-left 16px
  text-transform none

.accordion-menu .menuToggle-parent-button
  position relative
  display block
  text-align left

.accordion-menu .menuToggle-selected
  background-color #267ED5
//color white

.accordion-menu .menuToggle-parent-button .menuToggle-icon-expand
  position absolute
  right 4px
  top 12px

.htl-menu-right-on-toolbar
  font-size 14px
